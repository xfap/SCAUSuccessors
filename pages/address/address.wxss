/* pages/address/address.wxss */
.list{
  background: #FFFFCC;
  margin-top: 15rpx;
  border-top: 1px solid #eee
}

.list .item{
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  color: #333;
  border: 1px solid white;
  position: relative
}

.list .item label{
  float: left;
  line-height: 60rpx;
  width: 150rpx;
  padding-right: 15rpx;
  text-align: right;
  color: #333
}

.list .item input{
  width: 500rpx;
  color: #000;
  float: left;
  /*line-height: 60rpx;*/
  padding-top: 4rpx
}

.list .item textarea{
  float: left;
  width: 60%;
  height: 60rpx;
  padding-top: 5px
}

.list .item::after{
  content: "";
  display: block;
  clear: both
}

.list .item .btn{
  background: lightcoral;
  padding: 5rpx 75rpx;
  display: inline-block;
  font-size: 30rpx;
  color: #fff;
  border-radius: 10rpx;
}

.list .bt{
  text-align: center
}